<div class="hero-unit">
  <h2 class="id"><%= song.id %></h2>
  <%- linkTo('Edit this song', editSongPath(params.id), {class: 'btn pull-right'}); %>
</div>

<h2>Song Properties</h2>
<% for(var i in song) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= song[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>