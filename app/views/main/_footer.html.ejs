<div id="footerSlideContainer">
	<div id="footerSlideButton"><span class="lead">Total: $<span id="cart-total">0.00</span></span><i class="icon icon-shopping-cart icon-huge"></i></div>
	<div id="footerSlideContent">
		<div id="footerSlideCart">
		  <% if (session.get('userId')) { %>
			<h2>Shopping Cart</h2>
			<table id="cart" class="table table-hover table-bordered">
				<thead>
					<th>Name</th>
					<th class="description-column">Description</th>
					<th class="price-column">Price</th>
					<th class="quantity-column">Quantity</th>
				</thead>
				<tbody>
				</tbody>
			</table>
		  <% } else { %>
			  <%= partial("main/_login", {params: params}) %>
		  <% } %>
		</div>
	</div>
</div>